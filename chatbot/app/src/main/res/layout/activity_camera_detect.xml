<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CameraDetectionActivity">

    <com.wonderkiln.camerakit.CameraView
        android:id="@+id/camera_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/detect_face_button">

    </com.wonderkiln.camerakit.CameraView>

    <com.example.chatbot.Helper.GraphicOverlay
        android:id="@+id/graphic_overlay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/detect_face_button">

    </com.example.chatbot.Helper.GraphicOverlay>

    <Button
        android:id="@+id/detect_face_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_main_toolbar"
        android:text="@string/detect_button"
        android:textColor="@color/textColor"
        android:textSize="18sp">

    </Button>
</RelativeLayout>